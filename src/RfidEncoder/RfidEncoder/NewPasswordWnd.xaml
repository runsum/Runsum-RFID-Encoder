<Window x:Class="RfidEncoder.NewPasswordWnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password" WindowStyle="ToolWindow" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="New access password" Margin="3" />
        <TextBox Grid.Column="1" Name="PwdTextBox" Margin="3" Width="120" />
        
        <Button Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Right" Content="OK" Margin="3" 
                Click="ButtonBase_OnClick" Width="70"/>
    </Grid>
</Window>
